@model IEnumerable<SHOPTT_DA.Models>


@{
    ViewBag.Title = "ListHD";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Hóa Đơn</h2>


<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.ngayDat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngayGiao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.maKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.thanhToan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.giaoHang)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        @foreach (var iTem in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.maHD)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KhachHang.tenKH)
                </td>
                @if(item.maHD == iTem.maHD)
                { }
                <td>
                    @Html.DisplayFor(modelItem => item.)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.thanhToan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.giaoHang)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.maHD }) |
                    @Html.ActionLink("Details", "Details", new { id = item.maHD }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.maHD })
                </td>
            </tr>
        }
    }

    </table>
