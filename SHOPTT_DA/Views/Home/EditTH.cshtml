@model SHOPTT_DA.Models.ThuongHieu

@{
    ViewBag.Title = "EditTH";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EChỉnh sửa thương hiệu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maThuongHieu)

        <div class="form-group">
            <label for="tenThuongHieu" class="control-label col-md-2" style="text-align:left">Tên thương hiệu</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenThuongHieu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenThuongHieu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại", "listTH")
</div>
